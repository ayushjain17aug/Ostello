<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/my_profile_relLayout"
    tools:context="com.example.abhishek.fblogin.Activity.MyProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <com.example.abhishek.fblogin.util.RoundedImageView
        android:id="@+id/my_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/appBarLayout2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:src="@drawable/mario_black" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_pic"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:id="@+id/txtinptlyt1"
        android:paddingRight="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingEnd="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:hint="Name"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:id="@+id/name"
            android:layout_weight="1"
            android:clickable="false"
            android:layout_below="@+id/my_profile_pic"
            android:layout_alignLeft="@+id/phone_no"
            android:layout_alignStart="@+id/phone_no" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/txtinptlyt2"
        android:layout_below="@+id/txtinptlyt1"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingEnd="30dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:hint="Age"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:id="@+id/age"
            android:layout_weight="1"
            android:clickable="false"
            android:layout_alignTop="@+id/phone_no"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/txtinptlyt3"
        android:layout_below="@+id/txtinptlyt2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingEnd="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:hint="Email"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:id="@+id/email"
            android:clickable="false"
            android:layout_below="@+id/age"
            android:layout_centerHorizontal="true" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="savingProfile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingEnd="30dp"
        android:layout_below="@+id/txtinptlyt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:hint="Contact"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:id="@+id/phone_no"
            android:layout_weight="1"
            android:clickable="false"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/txtinptlyt1"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email" />


    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:weightSum="1"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_profile_pic"
            android:layout_alignStart="@+id/my_profile_pic"
            android:layout_below="@+id/textView5"
           android:onClick="GenderSelect"
            android:layout_marginLeft="50dp"
            android:text="Female"
            android:layout_weight="0.20" />
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:onClick="GenderSelect"
            android:text="Male"
            android:layout_marginLeft="120dp"
            android:layout_below="@+id/radioGroup"
            />
    </RadioGroup>


</RelativeLayout>